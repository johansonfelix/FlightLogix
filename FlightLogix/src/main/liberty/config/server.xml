    <properties serverName="soen.mysql.database.azure.com" portNumber="3306"
                databaseName="db"
                user="username@soen"
                password="Cheese123"/>
  </dataSource>-->

  <dataSource jndiName="jdbc/myDB">
    <jdbcDriver libraryRef="jdbcLib" />
    <properties serverName="localhost" portNumber="3306"
                databaseName="db1"
                user="root"
                password="password"/>
  </dataSource>
</server>
